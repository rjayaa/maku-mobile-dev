<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.circularreveal.CircularRevealRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.TenantFoodActivity">

    <Button
        android:id="@+id/backBtn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="@drawable/prev3"
        />

    <ImageView
        android:id="@+id/tenantimage"
        android:layout_width="match_parent"
        android:layout_height="221dp" />

    <TextView
        android:id="@+id/txtTenantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tenantimage"
        android:paddingTop="10dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/black"
        android:text="Nama Tenant"/>
    <TextView
        android:id="@+id/txtDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTenantName"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColor="@color/uba"
        android:text="Desc Tenant"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclefood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtDescription"
        android:layout_marginTop="20dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtTenantName" />

    <Button
        android:id="@+id/btnShowCart"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Show Cart"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/button_shape"/>

</com.google.android.material.circularreveal.CircularRevealRelativeLayout>